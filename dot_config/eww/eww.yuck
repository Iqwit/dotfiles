(defwindow firstwindow
	:monitor 0
	:geometry (geometry 
          :x "0%"
			    :y "0%"
			    :width "100%"
			    :height "10%"
			    :anchor "bottom center")
	:stacking "fg"
	:reserve (struts :distance "64px" :side "bottom")
	:windowtype "dock"
	:wm-ignore false
  :exclusive false
  ""
)



(defpoll time
  :interval "1s"
  `date "+%d.%m.%Y | %H:%M:%S"`
)
